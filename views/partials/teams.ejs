<div class="form-group row">
  <label for="team" class="col-sm-3 col-form-label">부서</label>
  <div class="col-sm-9">
    <select class="form-control" id="team" name="team" value="<%= user.team %>" <%= (errors.team)?'is-invalid':'' %>">
      <option selected disabled hidden>=== 부서를 선택하세요 ===</option>
      <option disabled>=== 연구소 ===</option>
      <option value="설계팀">설계팀</option>
      <option value="금형팀">금형팀</option>
      <option value="선행개발팀">선행개발팀</option>
      <option disabled>=== 영업구매부 ===</option>
      <option value="영업팀">영업팀</option>
      <option value="구매팀">구매팀</option>
      <option disabled>=== 제조부 ===</option>
      <option value="생산팀">생산팀</option>
      <option value="생산기술팀">생산기술팀</option>
      <option disabled>=== 품질 ===</option>
      <option value="품질관리팀">품질관리팀</option>
      <option disabled>=== 소재 사업실 ===</option>
      <option value="소재개발팀">소재개발팀</option>
    </select>
    <% if(errors.team){ %>
    <span class="invalid-feedback"><%= errors.team.message %></span>
    <% } %>
  </div>
</div>
